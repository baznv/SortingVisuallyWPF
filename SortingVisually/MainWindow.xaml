<Window x:Class="SortingVisually.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingVisually"
        mc:Ignorable="d"
        Title="SortingVisually" Height="420" Width="1000" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <StackPanel Height="50" VerticalAlignment="Top" DockPanel.Dock="Top">
            <Button Name="Start" Content="Start" HorizontalAlignment="Left" Height="50" Width="50" 
                    Click="Start_Click"/>
        </StackPanel>
        <StackPanel x:Name="spText" DockPanel.Dock="Top" Height="50">
            <Label Name="lblText" Content="Label" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="Basic_sp" DockPanel.Dock="Bottom" Background="AliceBlue">
           
        </StackPanel>
    </DockPanel>
    
</Window>
